{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Server",
            "type": "shell",
            "command": "node server/index.js",
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "MemoryForge server running at http://localhost:4000",
                    "endsPattern": "MemoryForge server running at http://localhost:4000"
                }
            }
        },
        {
            "label": "Stop Server",
            "type": "shell",
            "command": "powershell -NoProfile -Command \"$connection = Get-NetTCPConnection -LocalPort 4000 -State Listen -ErrorAction SilentlyContinue; if ($connection) { Stop-Process -Id $connection.OwningProcess -Force }\"",
            "problemMatcher": [],
            "presentation": {
                "reveal": "never"
            }
        }
    ]
}
